<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SecondActivity">
    <Button
        android:id="@+id/bind_service_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind service 2"
        app:layout_constraintBottom_toTopOf="@+id/get_grade_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_grade_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get grade 2"
        app:layout_constraintBottom_toTopOf="@+id/jump_third"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bind_service_2" />

    <Button
        android:id="@+id/jump_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jump to third"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_grade_2" />
</android.support.constraint.ConstraintLayout>